#include <iostream>
#include <cstdlib>
#include <ctime>

використання простору імен std;
int main() {
  int N=10;
  int max=0;
  int array[N];
  
  srand(час(NULL));
  cout << "Вхідний масив:"<<endl;
  for(int i=0; i<N; i++){
    масив[i] = rand()%20-10;
    якщо (i==N-1){
      cout << array[i]<< endl;
    }інше{
      cout << array[i]<< ", ";    
    }
  }
  for(int i=0; i<N; i++){
    if(array[i]>max){
      max = масив[i];
    }
  }
  for(int i=0; i<N; i++){
    if(array[i]==max){
      max = i;
    }
  }
  for(int i=0; i<max; i++){
    if(масив[i]<0){
      масив[i]=0;
      }
  }
  cout << "Вихідний масив:"<<endl;
  for(int i=0; i<N; i++){
    якщо (i==N-1){
      cout << array[i]<< endl;
    }інше{
      cout << array[i]<< ", ";    
    }
  }
}
